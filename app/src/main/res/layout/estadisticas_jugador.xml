<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="5"
    android:columnCount="2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Usuario :"
        android:id="@+id/tvUsuario"
        android:layout_column="0"
        android:layout_marginLeft="@dimen/izquierda"
        android:layout_row="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="jugador"
        android:id="@+id/tvJugadorIngresado"
        android:layout_gravity="center_horizontal"
        android:layout_column="1"
        android:layout_row="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Partidas :"
        android:id="@+id/tvJugadas"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginLeft="@dimen/izquierda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="jugadas"
        android:id="@+id/tvPartidasJugadas"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Victorias :"
        android:id="@+id/tvVictorias"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_marginLeft="@dimen/izquierda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ganadas"
        android:id="@+id/tvPartidasGanadas"
        android:layout_gravity="center_horizontal"
        android:layout_column="1"
        android:layout_row="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Derrotas :"
        android:id="@+id/tvDerrotas"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginLeft="@dimen/izquierda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="perdidas"
        android:id="@+id/tvPartidasPerdidas"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="% Victorias:"
        android:id="@+id/tvPorcentaje"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginLeft="@dimen/izquierda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="porcentaje"
        android:id="@+id/tvPorcentajeVictorias"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="center_horizontal" />

</GridLayout>