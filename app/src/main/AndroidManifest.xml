<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dnaiel.conecta4ad"
    android:versionCode="11"
    android:versionName="2.4">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity
            android:screenOrientation ="portrait"
            android:name="com.example.dnaiel.conecta4ad.Ingresar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation ="portrait"
            android:name="com.example.dnaiel.conecta4ad.PantallaPrincipal">
            <intent-filter>
                <action android:name="com.example.dnaiel.conecta4ad.PANTALLA"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation ="portrait"
            android:name="com.example.dnaiel.conecta4ad.MainActivity">
            <intent-filter>
                <action android:name="com.example.dnaiel.conecta4ad.MAINACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation ="portrait"
            android:name="com.example.dnaiel.conecta4ad.MainActivityPvP">
            <intent-filter>
                <action android:name="com.example.dnaiel.conecta4ad.MAINACTIVITYPVP" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation ="portrait"
            android:name="com.example.dnaiel.conecta4ad.About"
            android:theme ="@android:style/Theme.Holo.Dialog">
            <intent-filter>
                <action android:name="com.example.dnaiel.conecta4ad.ABOUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation ="portrait"
            android:name="com.example.dnaiel.conecta4ad.Conecta4Preference"
            android:theme ="@android:style/Theme.Holo.Dialog">
            <intent-filter>
                <action android:name="com.example.dnaiel.conecta4ad.CONECTA4PREFERENCE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation ="portrait"
            android:name="com.example.dnaiel.conecta4ad.Conecta4Preference2"
            android:theme ="@android:style/Theme.Holo.Dialog">
            <intent-filter>
                <action android:name="com.example.dnaiel.conecta4ad.CONECTA4PREFERENCE2" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation ="portrait"
            android:name="com.example.dnaiel.conecta4ad.RegistrarseActivity" >
            <intent-filter>
                <action android:name="com.example.dnaiel.conecta4ad.REGISTRARSE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation ="portrait"
            android:name="com.example.dnaiel.conecta4ad.Estadisticas"
            android:theme ="@android:style/Theme.Holo.Dialog">
            <intent-filter>
                <action android:name="com.example.dnaiel.conecta4ad.ESTADISTICAS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />

    </application>

</manifest>
